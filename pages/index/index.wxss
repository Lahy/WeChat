/**index.wxss**/
swiper{
  height: 240px;
}
.slide-image {
  width: 100%;
  /* height: auto; */
}
#choice {
  height: 60px;
  width: 100%;  
}
.section {
  background: #fffafa;
  width: 100%;
  height: 70px;
}
.classname{
  width: 100%;
  height: 420px;
  /* background: #93a2a9;  */
  margin-top: 10px;
}
.topic{
  display: inline-block;
  width:50%;
  height: 40px;
  line-height: 20px;
  /* color: white; */
  padding: 5px;
  margin: 5px;
  font-size: 16px;
}
.dot{
  float: right;
  width: 80px;
  height: 40px;
  text-align: center;
  overflow: hidden;
}
.dot image{
  width: 50%;
  height: 100%;
}
/* 弹性盒布局  */
.box{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 120px;
  /* background: lightgray; */
}
.tab{
  width: 100%;
  height:100px; 
  margin:0px 5px;
  /* overflow: hidden; */
}
.tab image{
  width: 100%;
  height: 100px;
}

/* 点击按钮分布 */
.flex-wrp{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 40px;
}
.flex-item{
  width: 25%;
  height:60px; 
  margin:7px auto;
  text-align: center;
}
.flex-item text{
  display: block;
  font-size: 12px;
}
.flex-item image{
  width: 42px;
  height: 40px;
}

