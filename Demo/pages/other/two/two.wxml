<!--pages/other/two/two.wxml-->
<scroll-view class="scroll-view_H" scroll-x="true" style="width:100%;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-left="{{scrollLeft}}">
  <view id="green" class="scroll-view-item_H bc_green" style='background:#006e5f;color: #fff;'>
    green
  </view>
  <view id="red" class="scroll-view-item_H bc_red" style="background:#dd3b44;color: #fff;">
    red
  </view>
  <view id="yellow" class="scroll-view-item_H bc_yellow" style="background:#f2de76;color: #fff;">
    yellow
  </view>
  <view id="blue" class="scroll-view-item_H bc_blue" style="background:#276893;color: #fff;">
    blue
  </view>
</scroll-view>

<camera device-position="back" flash="off" binderror="error" style="width:100%;height:300px;"></camera>
<button type="primary" bindtap="takePhoto" class="pho">拍照</button>
<view class="lookin">预览</view>
<image mode="widthFix" src="{{src}}"></image>
